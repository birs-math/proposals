<main class="content" style="overflow-x: auto">
  <div class="container-fluid">
    <div class="header">
      <h1 class="header-title">
        Guidelines for Proposals
      </h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item active" aria-current="page">Pages</li>
          <li class="breadcrumb-item active" aria-current="page">Guidelines for Proposals</li>
        </ol>
      </nav>
    </div>
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h2 class="py-2 border-bottom mb-4">Guidelines for Proposals</h2>
        </div>
        <div class="card-body">
          <div>
            <% if current_user&.staff_member? %>
