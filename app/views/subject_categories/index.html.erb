<main class="content">
  <div class="container-fluid">
    <div class="header">
      <h1 class="header-title">
        Subject Groupings
      </h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Dashboard", dashboards_path %> </a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= link_to "Subject Categories", subject_categories_path %></li>
        </ol>
      </nav>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h2>Groupings of Subject</h2>
          </div>
          <div class="card-body">
            <div class="float-end">
              <%= link_to "Add new Subject Category", new_subject_category_path, class: "btn btn-primary" %>
            </div>
            <div class="col-12 col-lg-12">
              <div>
                <table class="table">
                  <thead>
                    <tr>
                      <th>Category Name</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @subject_categories&.each do |category| %>
                      <tr>
                        <td><%= category.name %></td>
                        <td class="table-action">
                          <%= link_to '<i class="align-middle fas fa-fw fa-eye"></i>Show'.html_safe, subject_category_url(category) %>
                          <%= link_to '<i class="align-middle fas fa-fw fa-pen"></i>Edit'.html_safe, edit_subject_category_path(category) %>
                          <%= link_to '<i class="align-middle fas fa-fw fa-trash" data-toggle="tooltip" title="Delete" ></i>Delete'.html_safe,subject_category_url(category), method: :delete , data: {confirm: "Are you sure you want to delete this subject category?"} %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
