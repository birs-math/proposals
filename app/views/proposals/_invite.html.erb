<div class="nested-invites-wrapper" data-new-record="<%= f.object&.new_record? %>">
  <label for="invites">Add Invites</label><br>
  <div class="mb-3">
    <label class="required" for="firstname">First Name</label>
    <input type="text" name="invites_attributes[NEW_RECORD][firstname]" class="form-control" id="<%= invited_as %>_firstname"
           data-role="<%= invited_as %>"
           data-action="change->proposal-form#disableOtherInvites">
  </div>
  <div class="mb-3">
    <label for="lastname" class="required">Last Name</label>
    <input type="text" name="invites_attributes[NEW_RECORD][lastname]" class="form-control" id="<%= invited_as %>_lastname"
           data-role="<%= invited_as %>"
           data-action="change->proposal-form#disableOtherInvites">
  </div>
  <div class="mb-3">
    <label for="email" class="required">Email</label>
    <input type="email" name="invites_attributes[NEW_RECORD][email]" class="form-control" id="<%= invited_as %>_email"
           data-role="<%= invited_as %>"
           data-action="change->proposal-form#disableOtherInvites">
  </div>
  <div class="mb-3">
    <label for="deadline" class="required">Deadline for reply</label>
    <input type="date" name="invites_attributes[NEW_RECORD][deadline_date]" class="form-control" id="<%= invited_as %>_deadline" value="<%= date %>" data-action="click->proposal-form#presentDate" >
  </div>
  <input type="hidden" name="invited_as" value="<%= invited_as %>" id="invited_as"/>
</div>
