<main class="content">
  <div class="container-fluid">
    <div class="header">
      <h1 class="header-title">
        Proposals
      </h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
           <li class="breadcrumb-item"> <%= link_to "Dashboard", dashboards_path %> </a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= link_to "Proposals", proposals_path %></li>
          <li class="breadcrumb-item active" aria-current="page">New</li>
        </ol>
      </nav>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <div data-controller="submit-proposals">  
              <%= form_for @proposal do  |f| %>
                <div class="col-lg-8">
                  <div class="mb-3">
                    <%= f.label :proposal_types , class: 'form-label' %>
                    <%= f.select :proposal_type_id, options_for_select(proposal_types),{ include_blank: true }, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= f.submit 'Submit', class:'btn btn-primary' %>
                  </div>
                </div>
              <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
