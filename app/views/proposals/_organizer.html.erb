<div class="mb-3 row border m-1 p-1">
  <div class="col-6 mt-2">
    <div class="mb-3">
      <label for="firstname">First Name: </label>
      <label for="firstname"><%= invite.firstname %></label>
    </div>
    <div class="mb-3">
      <label for="lastname">Last Name: </label>
      <label for="lastname"><%= invite.lastname %></label>
    </div>
    <div class="mb-3">
      <label for="email">Email: </label>
      <label for="email"><%= invite.email %></label>
    </div>
  </div>
  <div class="col-6 mt-2">
    <div class="mb-3">
      <label for="status">Status: </label>
      <label for="status"><%= invite.status %></label>
    </div>
    <div class="mb-3">
      <label for="created_at">Invitation Date: </label>
      <label for="created_at"><%= invite.created_at.to_date %></label>
    </div>
    <div class="mb-3">
      <label for="deadline_date">Deadline Date: </label>
      <label for="deadline_date"><%= invite.deadline_date.to_date %></label>
      
    </div>
  </div>
</div>

