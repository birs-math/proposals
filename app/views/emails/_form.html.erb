<div>
  <%= form_with(url: send_emails_submitted_proposal_url(@proposal), method: :post) do |f| %>
    <div class="mb-3">
      <h2>Email</h2>
      <div class="mb-3">
        <%= f.label :subject, class: 'form-label' %>
        <%= f.text_field :subject, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :body, class: 'form-label' %>
        <%=f.text_area(:body, required: true, size: '3x5', class:'form-control')%>
      </div>
      <div class="mb-3">
        <%=f.check_box :revision%>
        <%= f.label :revision, class: 'form-label' %>
      </div>
      <div class="text-end m-3">
        <%= f.submit "Submit", class:  'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
