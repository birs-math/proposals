<main class="content" data-controller="proposal-types">
  <div class="container-fluid">
    <div class="header">
      <h1 class="header-title">
        Proposal Types
      </h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"> <%= link_to "Dashboard", dashboards_path %> </li>
          <li class="breadcrumb-item active" aria-current="page">Proposal Types</li>
        </ol>
      </nav>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Locations</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @proposal_types.each do |proposal_type|%>                     
              <tr>
                <td><%= link_to proposal_type.name, edit_proposal_type_path(proposal_type) %></td>
                <td><%= list_proposal_locations(proposal_type) %></td>
                <td class="table-action">
                  <%= link_to 'Edit', edit_proposal_type_path(proposal_type), class: 'btn btn-primary btn-sm' %>

                  <%= link_to 'Delete', proposal_type_path(proposal_type), class: 'btn btn-danger btn-sm', method: :delete, data: {confirm: "Are you sure you want to delete #{proposal_type.name}?"} %>

                  <%= link_to 'Create New Form',  new_proposal_form_url(proposal_type: proposal_type.id ), class: 'btn btn-pill btn-success btn-sm'%>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= link_to "Add Proposal Type", new_proposal_type_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</main>

