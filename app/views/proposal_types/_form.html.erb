<div class="main-content" id="panel">
  <div class="container-fluid mt-4">
    <h2>Proposal Types</h2>
    <div class="row">
      <div class="col-8">
        <%= form_with(model: proposal_type) do |f| %>
          <% if proposal_type.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(proposal_type.errors.count, "error") %> prohibited this proposal_type from being saved:</h2>
              <ul>
                <% proposal_type.errors.each do |error| %>
                <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group mt-4">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :location %>
            <%= f.select :location_ids, locations, {}, class: 'form-control', multiple: true %>
          </div>
          <div class="form-group mt-4">
            <%= f.submit class: 'btn btn-primary btn-sm' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
