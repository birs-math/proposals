<div class="splash">
  <div class="splash-icon"></div>
</div>
<main class="main h-100 w-100">
  <div class="container h-100">
    <div class="row h-100">
      <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
        <div class="d-table-cell align-middle">
          <div class="text-center mt-4">
            <h1 class="h2">Create An Account</h1>
            <p class="lead">
              Please enter your name, e-mail address, and a password.
            </p>
          </div>
          <div class="card">
            <div class="card-body">
              <div class="m-sm-4">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {'data-turbo':'false', 'role': 'form', 'class': 'has-validation'}) do |f| %>

                <%= f.fields_for :person, resource.person do |p| %>
                <div class="form-group mb-3">
                  <%= p.label :firstname, "Given Name" %>
                  <%= p.text_field :firstname, autofocus: true, maxlength: 35, class:'form-control form-control-lg', placeholder: 'Enter your first name' %>
                </div>
                <div class="form-group mb-3">
                  <%= p.label :lastname, "Family Name" %>
                  <%= p.text_field :lastname, maxlength: 35, class:'form-control form-control-lg', placeholder: 'Enter your last name' %>
                </div>
                <div class="form-group mb-3">
                  <%= p.label :email, "E-mail" %>
                  <%= p.email_field :email, maxlength: 254, class:"form-control form-control-lg", placeholder:"Enter your e-mail address", autocomplete: "email" %>
                </div>
                <% end %>
                <div class="form-group mb-3">
                  <%= f.label :password, "Password" %>
                  <%= f.password_field :password, maxlength: 64, class:"form-control form-control-lg", placeholder:"Enter a new password", autocomplete: "new-password" %>
                  <% if @minimum_password_length %>
                  <div class="text-muted font-italic">
                    <small>password strength: <span class="text-success font-weight-700"><%= @minimum_password_length %> characters minimum</span>
                    </small>
                  </div>
                  <% end %>
                </div>
                <div class="form-group mb-3">
                  <%= f.label :password_confirmation, "Confirm Password" %>
                  <%= f.password_field :password_confirmation, class:"form-control form-control-lg", placeholder:"Re-enter the password", autocomplete: "new-password" %>
                </div>
                <div class="text-center mt-3">
                  <%= f.submit "Sign up", class: 'btn btn-lg btn-primary' %>
                </div>
                <% end %>
              </div>
              <div class="text-end">
                <%= link_to "Already have an account", root_path %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

