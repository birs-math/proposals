<main class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <div class="m-sm-4">
              <div class="col-lg-12">
                <div class="mb-3"> 
                  <h2>
                    Frequently Asked Questions(FAQs)
                  </h2>
                </div>
                <% @faqs.each do |faq| %>
                  <div class="mb-3">
                    <h4>
                      <%= faq.question&.html_safe %>
                    </h4>
                    <p>
                      <%= faq.answer %>
                    </p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
