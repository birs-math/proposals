<div class="nested-form-wrapper" data-new-record="<%= f.object&.new_record? %>" data-controller="proposal-form">
  <label for="validations">Add Validations</label><br>  
  <div class="row mt-2">
    <div class="form-group col-5 mb-2">
      <%= f.label :type %>
      <%= f.select :validation_type, options_for_select(validation_types, f.object&.validation_type), {include_blank: 'Select validation'}, class: 'form-select', data: {action: 'proposal-form#handleValidationChange'} %>
    </div>
    <div class="form-group col-5 mb-2 <%= f.object&.validation_type == 'mandatory' ? 'hidden' : '' %>" >
      <%= f.label :value %>
      <%= f.text_field :value , class: 'form-control'%>
    </div>
    <div class="form-group col-10 mb-2">
      <%= f.label :error_message %>
      <%= f.text_field :error_message , class: 'form-control' %>
    </div>
    <div class="align-items-center mt-2 col-1 d-flex justify-content-center">
      <%= image_tag 'delete.svg', size: '25x25', data: {action: 'click->nested-form#remove'} %>
    </div>
  </div>
  <%= f.hidden_field :_destroy %>
</div>
