<div class="nested-options-wrapper" data-new-record="<%= f.object&.new_record? %>">
  <label for="options">Add Options</label><br>  
  <div class="row mt-2">
    <div class="form-group col-3 mb-2">
      <%= f.label :index %>
      <%= f.number_field :index , class: 'form-control', name: "proposal_field[options_attributes][NEW_RECORD][index]" %>
    </div>
    <div class="form-group col-4 mb-2" >
      <%= f.label :text %>
      <%= f.text_field :text, class: 'form-control', name: "proposal_field[options_attributes][NEW_RECORD][text]" %>
    </div>
    <div class="form-group col-3 mb-2">
      <%= f.label :value %>
      <%= f.text_field :value, class: 'form-control', name: "proposal_field[options_attributes][NEW_RECORD][value]" %>
    </div>
    <div class="align-items-center mt-2 col-1 d-flex justify-content-center">
      <%= image_tag 'delete.svg', size: '25x25', data: {action: 'click->nested-options#remove'} %>
    </div>
  </div>
  <%= f.hidden_field :_destroy %>
</div>
