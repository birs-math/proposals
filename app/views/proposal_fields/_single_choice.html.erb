<div class="form-group mb-3">
  <div>
    <span><%= location_name(field) %></span><br>
    <label for="statement"><h2><%= field.position %>. <%= field.statement %></h2></label><%= mandatory_field?(field) %>
    <% if can_edit(@proposal_form) %>
      <span data-action="click->proposal-form#editField" data-field-id="<%= field.id %>" data-proposal-form-id="<%= @proposal_form&.id %>" style="color: #3b7ddd" class="m-1" data-type-id="<%= @proposal_type&.id %>">Edit</span>
      <%= link_to 'Delete', proposal_field_proposal_type_proposal_form_url(@proposal_type, @proposal_form, field_id: field.id), method: :delete ,
    data: {confirm: "Are you sure you want to delete this field?"} %>
	  <% end %>
  </div>
  <span><%= field.description.html_safe %></span>
  <%= render partial: 'guideline_link', locals: { field: field } %>
  <% if @version.present? %>
    <%= select_tag "Option", options_for_select(proposal_field_options(field), answer_with_version(field, @proposal, @version)), class: 'form-select', disabled: action, name: field.id, data: {'action': 'focus->auto-save-proposal#onFocus blur->auto-save-proposal#onBlur'} %>
  <% else %>
    <%= select_tag "Option", options_for_select(proposal_field_options(field), answer(field, @proposal)), class: 'form-select', disabled: action, name: field.id, data: {'action': 'focus->auto-save-proposal#onFocus blur->auto-save-proposal#onBlur'} %>
  <% end %>

  <% if @submission %>
    <% validations(field, @proposal).each do |val| %>
      <p class="field-validation"><%= val %></p>
    <% end %>
  <% end %>
</div>

