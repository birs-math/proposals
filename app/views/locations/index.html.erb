<%= render partial: 'layouts/sidebar' %>

<div class="main-content" id="panel">
<p id="notice"><%= notice %></p>
  <div class="container-fluid mt-4">
    <h2>Locations</h2>
    <%= link_to "New Location", new_location_path, class: 'btn btn-sm btn-primary float-end' %>
    <div class="card mt-5">
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead class="thead-light">
            <tr>
            <th>Name</th>
            <th>Code</th>
            <th>City</th>
            <th>Country</th>
            <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @locations.each do |location| %>
            <tr>
              <td><%= location.name %></td>
              <td><%= location.code %></td>
              <td><%= location.city %></td>
              <td><%= location.country %></td>
              <td>
                <%= link_to "Edit", edit_location_path(location), class: 'btn-sm btn btn-primary' %>
                <%= link_to "Delete", location, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-sm btn btn-danger' %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
