<main class="content">
  <div class="container-fluid">
    <div class="header">
      <h1 class="header-title">
        Email Templates
      </h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Dashboard", dashboards_path %> </a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= link_to "Email Templates", email_templates_path %></li>
          <li class="breadcrumb-item active" aria-current="page"><%= @email_template.new_record? ? 'New' : 'Edit' %></li>
        </ol>
      </nav>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <%= form_for @email_template do |f| %>
              <div class="mb-3">
                <div class="mb-3">
                  <%= f.label "Email Type", class: 'form-label' %>
                  <%= f.select :email_type, options_for_select(types_of_email, @email_template.email_type), { include_blank: '' }, required: true, class: 'form-select w-25' %>
                </div>
                <div class="mb-3">
                  <%= f.label :title, class: 'form-label' %>
                  <%= f.text_field :title, required: true, class: 'form-control' %>
                </div>
                <div class="mb-3">
                  <%= f.label :subject, class: 'form-label' %>
                  <%= f.text_field :subject, required: true, class: 'form-control' %>
                </div>
                <div class="mb-3">
                  <%= f.label :body, class: 'form-label' %>
                  <%= f.text_area(:body, required: true, size: '3x5', class:'form-control tinymce') %>
                </div>
                <div class="text-end m-3">
                  <%= f.submit "Submit", class:  'btn btn-primary' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
