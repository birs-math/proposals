<div class="nested-roles-permission-wrapper" data-new-record="<%= f.object&.new_record? %>">
  <div class="row mb-3">
    <div class="col-xs-5 col-md-5">
      <%= select_tag(:permission_type,options_for_select([['Read', 'Read'], ['Manage', 'Manage'], ['Write', 'Write']], f.object&.permission_type),{ class: "form-select", required: true, name: "role[role_privileges_attributes][NEW_RECORD][permission_type]", prompt: "Select Permission Type"}) %>
    </div>

    <div class="col-xs-5 col-md-5">
      <%= select_tag(:privilege_name,options_for_select(privileges_name, f.object&.privilege_name),{ class: "form-select", required: true, name: "role[role_privileges_attributes][NEW_RECORD][privilege_name]", prompt: "Select Permission Name"}) %>
    </div>


    <div class="col-md-2 col-xs-2">
      <%= image_tag 'delete.svg', size: '25x25', data: {action: 'click->nested-roles-permission#remove'} %>
    </div>
  </div>
  <%= f.hidden_field :_destroy %>
</div>
