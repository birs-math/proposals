<main class="content">
  <div class="container-fluid">
    <div class="header">
      <h1 class="header-title">
        Schedules
      </h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"> <%= link_to "Dashboard", dashboards_path %> </a></li>
          <li class="breadcrumb-item active" aria-current="page">Schedule</li>
          <li class="breadcrumb-item active" aria-current="page">New</li>
        </ol>
      </nav>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <div>
              <h2>Start a new Schedule</h2>
              <%= form_with(url: new_schedule_run_schedules_path, method: :get) do |f| %>
                <div class="col-lg-8">
                  <div class="mb-3">
                    <%= f.label :locations, "Select the location for schedule:", class: 'form-label' %>
                    <%= f.select :location, options_for_select(locations), {}, class: 'form-select w-50' %>
                  </div>
                  <div class="form-group">
                    <%= f.submit 'Submit', class:'btn btn-primary' %>
                  </div>
                </div>
              <% end %>
            </div>
            <div>
              <h2 class="mt-4 mb-3" style ="color: #166688;" >Schedule Optimization Results</h2>
              <table class="table" border="1">
                <thead>
                  <tr>
                    <th >Id</th>
                    <th>Loc</th>
                    <th>Weeks</th>
                    <th>First Week</th>
                    <th>Run Time</th>
                    <th>iterations</th>
                    <th>Number of Cases</th>
                    <th>Top Score</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% ScheduleRun.all&.find_each do |run| %>
                    <tr>
                      <td><%= run.id %></td>
                      <td><%= run.location.name %></td>
                      <td><%= run.weeks %></td>
                      <td><%= run.startweek %></td>
                      <% if run.end_time.nil? %>
                        <td>
                          <%= link_to 'Abort the run', abort_run_schedules_path(run_id: run.id), method: :post %>
                        </td>
                      <% else %>
                        <td><%= run.end_time %></td>
                      <% end %>
                      <td><%= run.runs %></td>
                      <td><%= run.cases %></td>
                      <td></td>
                      <% if run.end_time.present? %>
                        <td>
                          <%= link_to 'View results', optimized_schedule_schedules_url(run_id: run.id) %>
                        </td>
                      <% else %>
                        <td></td>
                      <% end %>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
