<%= render 'layouts/sidebar' %>

<main class="content">
  <div class="container-fluid">
    <div class="header">
      <h1 class="header-title">
        Proposal Forms
      </h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"> <%= link_to "Dashboard", dashboards_path %> </a></li>
          <li class="breadcrumb-item active" aria-current="page">Proposal Forms</li>
        </ol>
      </nav>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            </h6>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th style="width:40%;">Proposal Type</th>
                <th style="width:25%">Status</th>
                <th>Updated by</th>
                <th>Created by</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @proposal_forms.each do |proposal_form| %>
              <tr>
                <td><%= proposal_form.proposal_type.name %></td>
                <td> <%= proposal_form.status %></td>
                <td><%= proposal_form.created_by&.email %></td>
                <td><%= proposal_form.updated_by&.email %></td>

                <td class="table-action">
                  <%= link_to '<i class="align-middle fas fa-fw fa-eye"></i>'.html_safe, proposal_form_path(proposal_form) %>
                  <% if proposal_form.draft? %>
                   <%= link_to '<i class="align-middle fas fa-fw fa-pen"></i>'.html_safe, edit_proposal_form_path(proposal_form) %>
                  <% end %>
                  <%= link_to '<i class="align-middle fas fa-fw fa-trash"></i>'.html_safe, proposal_form_path(proposal_form), method: :delete ,
                    data: {confirm: "Are you sure you want to delete #{proposal_form.proposal_type.name}?"} %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>
