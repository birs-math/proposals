<div class="modal fade" id="person-modal" tabindex="-1" aria-labelledby="email-previewLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><span id="subject"></span></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body text-justify" style="text-align: justify;">
          <%= form_with(model: @person, url: update_lead_organizer_path(person_id: @person.id, proposal_id: @proposal.id), remote: true, method: :patch) do |f| %>
            <%= f.label :firstname %>
            <%= f.text_field :firstname, class: 'form-control' %>
            <%= f.label :lastname %>
            <%= f.text_field :lastname, class: 'form-control' %>
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
            <%= f.label :affiliation %>
            <%= f.text_field :affiliation, :value => @person.affiliation, class: 'form-control' %>
            <br>

            <div class="actions">
              <%= f.submit :Update, class: 'btn btn-primary' %>
            </div>
            <% end %>
      </div>
      <div class="modal-footer" data-controller="nested-invites">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
