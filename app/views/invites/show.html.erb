<div class="row container invitations position-absolute top-50 start-50 translate-middle">

  <%= form_with url: inviter_response_proposal_invite_path(@proposal, @invite, code: @invite.code) do  |f| %>
  <div class="card invitation-box">
    <div class="card-body">
      <div class="row">
        <div class='text-center'>
            <h1>Welcome, <%= @invite.person&.fullname %>!<br>
              <small>Thank you for responding to the invitation.</small></h1>
        </div>
      </div>
      <div class="row">
        <p class='lead text-center'>You have been invited by <%= @invite.proposal.lead_organizer&.fullname %> to <%= invited_role(@invite) %> a proposed workshop facilitated by the Banff International Research Station entitled: <br>
        <strong><%= @invite.proposal.title %></strong>
        </p>
        <p class='lead text-center'>If this workshop is accepted to take place in <%= @invite.proposal.year %>, would you be interested in attending, in principle? Please note that this is a request for expression of interest, not confirmation of participation</p>
      </div>

      <div class="jumbotron answers">
        <div class="d-flex justify-content-evenly">
          <div>
            <%= f.submit 'YES', class: "btn btn-lg btn-block btn-success" %>
          </div>
          <div>
            <%= f.submit 'MAYBE', class: "btn btn-lg btn-block btn-warning" %>
          </div>
          <div>
            <%= f.submit 'NO', class: "btn btn-lg btn-block btn-danger" %>
          </div>
        </div>
      </div>
      <p class="lead text-center mb-4">If you select <i>Yes</i> or <i>Maybe</i>, you will also be asked to fill out a short Diversity and Inclusivity survey. Filling out this survey is required in order for your <i>Yes</i> or <i>Maybe</i>  to be counted.</p>
    </div>
  </div>

  <% end %>
</div>
