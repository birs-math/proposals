<main class="content">
  <div class="container-fluid">
    <div class="header">
      <h1 class="header-title">
        Proposals
      </h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
           <li class="breadcrumb-item"> <%= link_to "Dashboard", dashboards_path %> </a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= link_to "Proposals", proposals_path %></li>
          <li class="breadcrumb-item active" aria-current="page"><%= link_to @proposal.proposal_type.name, edit_proposal_path(@proposal) %></li>
          <li class="breadcrumb-item active" aria-current="page"><%= link_to "Invites", proposal_invites_path %></li>
          <li class="breadcrumb-item active" aria-current="page">New</li>
        </ol>
      </nav>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <div class="m-sm-4">
              <%= form_for([@proposal,@invite]) do |f| %>
                <div class="mb-3">
                  <%= f.label :email, "First Name" %>
                  <%= f.text_field :firstname, autofocus: true, class:'form-control', required: true %>
                </div>
                <div class="mb-3">
                  <%= f.label :email, "Last Name" %>
                  <%= f.text_field :lastname, class:'form-control', required: true %>
                </div>
                <div class="mb-3">
                  <%= f.label :email, "E-mail" %>
                  <%= f.email_field :email, class:"form-control form-control-lg", autocomplete: "email", required: true %>
                </div>
                <div class="mb-3">
                  <label>Select role of person to invite:</label>
                  <%= f.select(:invited_as, options_for_select([['Co Organizer', 'Co Organizer'], ['Participant', 'Participant']]), {required: true}, {class: "form-control"}) %>
                </div>
                <div class="mb-3">
                  <%= f.label :deadline, "Deadline for reply" %>
                  <%= f.date_field :deadline_date,  class:"form-control", required: true %>
                </div>
                <div class="mt-3">
                  <%= f.submit "Send Invitation", class: 'btn btn-lg btn-primary' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
