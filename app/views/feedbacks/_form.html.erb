<main class="content">
  <div class="container-fluid">
    <div class="header">
      <h1 class="header-title">
        Feedback
      </h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item active" aria-current="page">Feedback </li>
          <li class="breadcrumb-item active" aria-current="page">New</li>
        </ol>
      </nav>
    </div>
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title"> </h5>
        </div>
        <div class="card-body">
          <%= form_for feedback do |f| %>
            <div class="mb-3">
              <h2>Feedback</h2>
              <p>Please let us know if you have experienced problems with our form, or have any suggestions for us, please enter them here.</p>
              <%=f.text_area(:content, required: true, size: '3x5', class:'form-control', placeholder: "Write your feedback here...")%>
            </div>
            <%= f.submit "Submit", class:  'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
