<main class="content">
  <div class="container-fluid">
    <div class="header">
      <h1 class="header-title">
        Feedbacks
      </h1>
    </div>
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">User Feedbacks</h5>
        </div>
        <div class="card-body">
          <% @feedbacks.each do |feedback| %>  
            <div class="card">
              <div class="card-header">
                <h5 class="card-title mb-0"><%= feedback.user&.fullname%></h5>
              </div>
              <div class="card-body">
                <p class="card-text"><%= feedback.content %></p> 
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
